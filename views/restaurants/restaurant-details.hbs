<div class="justify-content-center">

    <h1>{{restaurant.name}}</h1>

    <br>

        <ul class="list-group card">
            
            <li class="list-group-item"><h5>Dirección:</h5> {{data.formatted_address}}</li>

            <li class="list-group-item"><h5>Horarios:</h5>
                <ul>
                    {{#each data.opening_hours.weekday_text}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            </li>

             <li class="list-group-item"><h5>Teléfono:</h5> {{data.formatted_phone_number}}</li>
             <li class="list-group-item"><h5>Website:</h5> <a href='{{data.website}}'>{{data.website}}</a></li>

            <li class="list-group-item"><h5>Opiniones de usuarios:</h5>
                 {{#each data.reviews}}
                 <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">{{this.author_name}}</h6>
                        <h6 class="card-subtitle mb-2 rating">Puntuación: {{this.rating}}/5</h6>
                        <p class="card-text">{{this.text}}</p>
                    </div>
                </div>
                {{/each}}
            

            </li>
        </ul>



</div>
<div class="row justify-content-center">
<a href="/restaurants/list"><button type="submit" class="btn btn-light btn-back">Volver a lista de restaurantes</button></a>
</div>
