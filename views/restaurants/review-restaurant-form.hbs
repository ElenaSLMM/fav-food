<h2>Opini√≥n del restaurante: {{name}}</h2>
<form action="/restaurants/reviews/new/{{_id}}" method="POST">
  <div class="form-group">
    <label for="date"></label>
    <input name='date' type="date" class="form-control" id="date" placeholder="date">
  </div>
  <div class="form-group">
    <label for="comments">Comentarios</label>
    <textarea name='comments' class="form-control" id="comments" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="rating">Rating</label>
    <select name='rating' type='number' class="form-control" id="rating">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <button type='submit'>Enviar</button>
</form>